<!DOCTYPE html>
<html>
<head>
  <title>ValidatorApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
</head>
<body>
  <div class="header">
    <div class="btn-group" role="group" aria-label="...">
      <% if current_user %>

        <button type="button" class="btn btn-default"><%= link_to "Profile", user_path(current_user) %></button>
        <button type="button" class="btn btn-default"><%= link_to "Log Out", logout_path %></button>
      </div>
        <p> You are logged in as <%= current_user.email %></p>

      <% else %>
        <button type="button" class="btn btn-default"><%= link_to "Create Account", new_user_path %></button>
        <button type="button" class="btn btn-default"><%= link_to "Log In", login_path %></button>
      </div>
      <% end %>
  <br>

  <% flash.each do |name, msg| %>
  <div id="flash_messages">
    <div class="alert alert-info" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only"><%= name %>:</span>

      <%= msg %>

    </div>
  </div>
  <% end %>
</div>

<div class="content">
<%= yield %>
</div>

</body>
</html>
